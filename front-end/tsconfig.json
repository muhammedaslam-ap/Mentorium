{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",                // <--- Important for @/ alias
    "paths": {
      "@/*": ["*"]                     // <--- Enables "@/services/..." to work
    }
  },
  "include": ["src",   
   "tailwind.config.ts"
]
}
